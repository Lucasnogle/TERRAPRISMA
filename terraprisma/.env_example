PORT=3000
NODE_ENV=development
TIMEZONE=America/Sao_Paulo
LOG_LEVEL=INFO

# JWT
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# SQL Server
DATABASE_USER=
DATABASE_PASSWORD=
DATABASE_SERVER=
DATABASE_DATABASE=

# MongoDB
MONGO_URI=
MONGO_DB_NAME=

# MySQL
MYSQL_USER=
MYSQL_PASSWORD=
MYSQL_HOST=
MYSQL_DB=
MYSQL_PORT=

# AWS S3
AWS_ACCESS_KEY=
AWS_SECRET_KEY=
AWS_REGION=
AWS_S3_BUCKET_NAME=

# Firebase / Firestore
FIREBASE_PROJECT_ID=
FIREBASE_SERVICE_ACCOUNT_PATH=secrets/firebase.serviceAccount.json
# FIREBASE_DATABASE_ID=           # opcional, se usar database diferente de (default)

# Segunda Leve - OpenAI (opcional, fallback para gerador determinístico)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Segunda Leve - SMTP (Email)
# Se não configurado, emails serão simulados (log no console)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM="Segunda Leve" <noreply@segundaleve.com>

# Job Queue Settings
JOB_MAX_ATTEMPTS=3
JOB_RUNNING_TIMEOUT_MINUTES=10
JOB_POLL_INTERVAL_MS=2000

# Rate Limiting (em produção, use Redis store)
# Documentação: src/middlewares/rateLimit.js

# Alternativa: Application Default Credentials (ADC) em Cloud Run/GCE
# Se FIREBASE_SERVICE_ACCOUNT_PATH não estiver definido ou arquivo não existir,
# o sistema tentará usar ADC automaticamente.
